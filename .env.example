# DATABASE SETTINGS
DATABASE_URI=postgresql+asyncpg://your_username:your_password@your_host:your_port/your_database
POSTGRES_PORT=5432
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_DB=your_database

# REDIS SETTINGS
REDIS_URI=redis://localhost:6379
REDIS_PORT=6379

# CORS SETTINGS
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["Authorization", "Content-Type"]

# JWT SETTINGS
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nMIIE...\n-----END RSA PRIVATE KEY-----
JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nMIIB...\n-----END PUBLIC KEY-----
JWT_ISSUER=https://auth.example.com
JWT_AUDIENCE=["https://api.example.com"]
