# DATABASE SETTINGS
DATABASE_URI=postgresql+asyncpg://your_username:your_password@your_host:your_port/your_database
POSTGRES_PORT=5432
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_DB=your_database

# REDIS SETTINGS
REDIS_URI=redis://localhost:6379
REDIS_PORT=6379

# CORS SETTINGS
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["Authorization", "Content-Type"]

# COOKIE SETTINGS
COOKIE_NAME=session
COOKIE_MAX_AGE=1209600  # 14 days in seconds
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax

# EMAIL SETTINGS
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Auth Service

# VERIFICATION SETTINGS
VERIFICATION_CODE_LENGTH=16  # Will generate 32 character hex string
VERIFICATION_CODE_EXPIRES_HOURS=24


