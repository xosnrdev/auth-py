# APPLICATION SETTINGS
API_PORT=8000
APP_URL=http://localhost:3000
VERIFICATION_URL_PATH=/verify-email

# RATE LIMITING SETTINGS
RATE_LIMIT_REQUESTS=5  # Maximum requests per window
RATE_LIMIT_WINDOW_SECS=60  # Window size in seconds

# JWT SETTINGS
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES_SECS=900  # 15 minutes in seconds
JWT_REFRESH_TOKEN_EXPIRES_SECS=604800  # 7 days in seconds

# OAUTH2 SETTINGS
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
APPLE_CLIENT_ID=your.apple.service.id-here
APPLE_CLIENT_SECRET=your-apple-private-key-here
APPLE_TEAM_ID=YOURTEAMID1234
APPLE_KEY_ID=YOURKEYID5678

# DATABASE SETTINGS
DATABASE_URI=postgresql+asyncpg://user:pass@localhost:5432/auth_db
POSTGRES_PORT=5432
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_DB=your_database
DEBUG=true

# REDIS SETTINGS
REDIS_URI=redis://localhost:6379
REDIS_PORT=6379

# CORS SETTINGS
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# COOKIE SETTINGS
COOKIE_MAX_AGE_SECS=604800

# EMAIL SETTINGS
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Auth Service

# VERIFICATION SETTINGS
VERIFICATION_CODE_LENGTH=16
VERIFICATION_CODE_EXPIRES_HOURS=24


